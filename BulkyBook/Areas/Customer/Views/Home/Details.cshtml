@model BulkyBook.Models.ShoppingCart

<form method="post">
    <input type="hidden" asp-for="ProductId"/>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-white text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary text-dark">@Model.Product.Title</h1>
                    <p class="text-primary">by @Model.Product.Author</p>
                </div>
                <div class="col-12 col-md-6 text-lg-right pt-4">
                    <span class="badge badge-primary pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                    <span class="badge badge-primary pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row text-center pl-2" style="font-weight:bold">
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>1-49</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>50-99</div>
                                </div>
                                <div class="p-1 col-2 bg-light border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-light">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>$@Model.Product.Price.ToString("F")</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>$@Model.Product.Price50.ToString("F")</div>
                                </div>
                                <div class="p-1 col-2 bg-light">
                                    <div>$@Model.Product.Price100.ToString("F")</div>
                                </div>
                            </div>
                            
                            <div class="row pl-2" style="padding-top: 10px">
                                <p class="text-secondary">
                                    @Html.Raw(Model.Product.Description)
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="row pl-2">
                                    <div class="col-2 text-primary text-dark" style="padding-top: 6px"><h5>Quantity:</h5></div>
                                    <div class="col-2"><input class="form-control" asp-for="Count"/></div>
                                </div>
                                <div class="row pl-2" style="padding-top: 20px">
                                    <div class="col-12 col-md-4 pb-1">
                                        <a asp-action="Index" class="btn btn-primary form-control btn-square btn-md" style="height:50px; padding-top: 13px; background: #F4D07A; color: black">Back</a>
                                    </div>
                                    <div class="col-12 col-md-4 pb-1">
                                        <input type="submit" value="Add to Cart" class="btn btn-primary form-control btn-square btn-md" style="height:50px; background: #F4D07A; color: black">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>